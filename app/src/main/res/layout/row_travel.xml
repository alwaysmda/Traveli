<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>
        <variable
            name="app"
            type="main.ApplicationClass" />

        <variable
            name="data"
            type="domain.model.Travel" />




    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorBackground2"
        app:cardCornerRadius="@dimen/radiusMedium"
        android:layout_marginEnd="@dimen/paddingMedium"
        >
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="?attr/colorBackground1"
            xmlns:tools="http://schemas.android.com/tools"

            >


            <ImageView
                android:id="@+id/iv_travel"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                imageUrl="@{data.image}"
                />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_travel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/textLarge"
                android:textColor="?attr/colorText0"
                fonti="@{app.m.fontMedium}"
                android:layout_marginTop="@dimen/paddingMedium"
                tools:text="ssdasd"
                android:text="@{data.name}"
                />






        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</layout>

