<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="ui.home.HomeViewModel" />

    </data>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackground0"

        >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorBackground0">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search"
                style="@style/GeneralButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="@dimen/paddingLarge"
                android:layout_marginTop="@dimen/paddingLarge"
                android:gravity="start|center_vertical"
                android:onClick="@{()->vm.onSearchClick()}"
                android:text="@{vm.app.m.search}"
                app:cardBackgroundColor="?attr/colorBackground2"
                app:cornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_first_travel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/paddingLarge"
                android:layout_marginTop="@dimen/paddingLarge"
                app:cardBackgroundColor="?attr/colorBackground2"
                app:cardCornerRadius="@dimen/radiusMedium"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toBottomOf="@+id/btn_search">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:id="@+id/iv_banner"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tv_banner_name"
                        fonti="@{vm.app.m.fontMedium}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/gradiant"
                        android:gravity="center"
                        android:paddingTop="@dimen/paddingLarge"
                        android:paddingBottom="@dimen/paddingSmall"
                        android:textColor="?attr/colorText0"
                        android:textSize="@dimen/textLarge"
                        app:layout_constraintBottom_toBottomOf="parent"

                        />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/paddingLarge"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/cv_first_travel"
                tools:itemCount="2"
                tools:listitem="@layout/row_travel"

                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/banner_loading"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="?attr/colorBackground0"
                app:layout_constraintTop_toBottomOf="@+id/btn_search">

                <ProgressBar
                    android:id="@+id/banner_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_banner_error"
                    fonti="@{vm.app.m.fontMedium}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorText0"
                    android:textSize="@dimen/textLargeX"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_banner_retry"
                    style="@style/GeneralButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingMedium"
                    android:onClick="@{()-> vm.onGetBannerRetry()}"
                    android:text="@{vm.app.m.retry}"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_banner_error" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_trending_title"
                style="@style/GeneralButton.TextButton"
                fonti="@{vm.app.m.fontBold}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/paddingLarge"
                android:layout_marginTop="@dimen/paddingLarge"
                android:gravity="start|center_vertical"
                android:text="@{vm.app.m.trending}"
                android:textSize="@dimen/textLargeXX"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd"
                app:iconTint="?attr/colorText0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_sub_banner"
                tools:text="Trending"

                />

            <!--rv_trending-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_trending_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tv_trending_title"
                tools:listitem="@layout/row_square_travel"

                />
            <!--           loading-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/trending_loading"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="?attr/colorBackground0"
                app:layout_constraintTop_toTopOf="@+id/rv_trending_travel"


                >

                <ProgressBar
                    android:id="@+id/trending_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_trending_error"
                    fonti="@{vm.app.m.fontMedium}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingLargeXXX"
                    android:textColor="?attr/colorText0"
                    android:textSize="@dimen/textLargeX"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_trending_retry"
                    style="@style/GeneralButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingMedium"
                    android:text="@{vm.app.m.retry}"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_trending_error" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_new"
                style="@style/GeneralButton.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/paddingLarge"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="@dimen/paddingLarge"
                android:text="@{vm.app.m.new}"
                android:textSize="@dimen/textLargeXX"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd"
                app:iconTint="?attr/colorText0"
                app:layout_constraintTop_toBottomOf="@+id/rv_trending_travel"
                app:layout_goneMarginTop="155dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_new_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/btn_new" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/new_travel_loading"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="?attr/colorBackground0"
                app:layout_constraintTop_toTopOf="@+id/rv_new_travel"


                >

                <ProgressBar
                    android:id="@+id/new_travel_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_new_travel_error"
                    fonti="@{vm.app.m.fontMedium}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingLargeXXX"
                    android:textColor="?attr/colorText0"
                    android:textSize="@dimen/textLargeX"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_new_travel_retry"
                    style="@style/GeneralButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingMedium"
                    android:text="@{vm.app.m.retry}"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_new_travel_error" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/tv_countries"
                style="@style/GeneralButton.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/paddingLarge"
                android:layout_marginTop="@dimen/paddingLarge"
                android:gravity="start|center_vertical"
                android:text="@{vm.app.m.countries}"
                android:textSize="@dimen/textLargeXX"
                app:icon="@drawable/ic_arrow_right"
                app:iconGravity="textEnd"
                app:iconTint="?attr/colorText0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_new_travel"
                app:layout_goneMarginTop="150dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_countries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/paddingMedium"
                android:clipToPadding="false"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp"
                android:paddingBottom="@dimen/paddingLarge"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@+id/tv_countries" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/countries_loading"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="?attr/colorBackground0"
                app:layout_constraintTop_toTopOf="@+id/rv_countries"


                >

                <ProgressBar
                    android:id="@+id/countries_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_countries_error"
                    fonti="@{vm.app.m.fontMedium}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingLargeXXX"
                    android:textColor="?attr/colorText0"
                    android:textSize="@dimen/textLargeX"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_countries_retry"
                    style="@style/GeneralButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/paddingMedium"
                    android:text="@{vm.app.m.retry}"
                    android:visibility="gone"
                    android:onClick="@{()->vm.onGetCountriesRetry()}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_countries_error" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>


</layout>


